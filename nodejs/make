all: pseuco ccs
all+: core pseuco ccs

core:
					cd ../ && make -f make

pseuco:
					coffee -c -b -j ./.PseuCoExport.js PseuCoExport.coffee && mkdir -p node_modules && cat ../htdocs/PseuCoParser.js ../htdocs/PseuCo.js ./.PseuCoExport.js > node_modules/PseuCo.js

ccs:
					coffee -c -b -j ./.CCSExport.js CCSExport.coffee && mkdir -p node_modules && cat ../htdocs/CCSParser.js ../htdocs/CCS.js ./.CCSExport.js > node_modules/CCS.js

merge: cmain #core 
					cat ../htdocs/CCS.js ../htdocs/CCSParser.js ../htdocs/PseuCo.js ../htdocs/PseuCoParser.js ../htdocs/PCCompiler.js main.js > node.js

cmain:
					coffee -c -b -j main.js main.coffee