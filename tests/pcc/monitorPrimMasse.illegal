monitor PrimOderNicht { 

    bool prim;        // nicht direkt zugreifbar
    condition istPrim with prim;   // nicht direkt zugreifbar
    int n;               // nicht direkt zugreifbar
   
   void set(int x){
      n = x;
      prim = prime(n); // Ein beliebiger Primzahltest
      if (prim){
       signalAll istPrim; 
      }
   }
   
   int get(){
      return n;
   }
   int getPrime(){
      waitForCondition istPrim;
       return n;   
   }   
}